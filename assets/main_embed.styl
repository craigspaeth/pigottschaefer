@import nib
global-reset()

red = #ef4123
font-smoothing()
  vendor('font-smoothing', arguments)
uppercase()
  letter-spacing 1px
  font-weight bold
  text-transform uppercase
  font-smoothing antialiased

body
  font-family 'Helvetica', 'Arial', 'sans-serif'
  font-size 14px
  color #555

header
  clearfix()
  padding 10px
  width 100%
  height 56px
  box-sizing border-box
  #logo, nav
    float left

  #logo
    background url('/images/logo.png') no-repeat left center
    padding 10px
    padding-left 60px
    color red
    uppercase()
  
  nav
    padding 10px
    a
      margin 0 10px
      font-size 14px
      uppercase()
      letter-spacing 0px
      cursor pointer
      transition color 0.3s
      &:hover
        color black
      &:first-child
        padding-left 0

#social
  padding 20px
  text-align center
  .preamble
    font-size 11px
    letter-spacing 1px
    padding 10px 0 20px 0
    text-transform uppercase
  a
    uppercase()
    letter-spacing 0
    color red
    text-decoration none
    margin 0 15px
    padding 10px 0 4px 30px
    &.facebook
      background url('/images/facebook.png') no-repeat left center
    &.twitter
      background url('/images/twitter.png') no-repeat left center
    &:hover
      border-bottom 2px solid

#images
  width 14400px
  margin-bottom 1px
  clearfix()
  img
    height 450px
    display block
    float left

#portfolio
  width 100%
  overflow-x scroll
  box-sizing border-box
  #bg
    height 500px
    background url('/images/bg.jpg') no-repeat
    background-size auto 100%

::-webkit-scrollbar
::-moz-scrollbar
  width 4px

::-webkit-scrollbar-track
::-moz-scrollbar-track
  box-shadow inset 0 0 6px #aaa
  height 5px
  
::-webkit-scrollbar-thumb
::-moz-scrollbar-thumb
  background red
  border-radius 10px