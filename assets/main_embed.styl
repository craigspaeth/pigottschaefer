@import nib
global-reset()

red = #ef4123
font-smoothing()
  vendor('font-smoothing', arguments)
uppercase()
  letter-spacing 1px
  font-weight bold
  text-transform uppercase
  font-smoothing antialiased

body
  font-family 'Helvetica', 'Arial', 'sans-serif'
  color #444

header
  clearfix()
  padding 10px
  
  #logo, nav
    float left

  #logo
    background url('/images/logo.png') no-repeat left center
    width @height
    padding 20px
    padding-left 80px
    color red
    uppercase()
  
  nav
    padding 20px
    a
      padding 0 20px
      uppercase()
      letter-spacing 0px
      &:first-child
        padding-left 0
        
#portfolio
  background url('/images/bg.jpg')
  background-size auto 100%
  height  100%
  width 6000px
  position fixed
  top 80px