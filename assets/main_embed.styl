@import nib
global-reset()

red = #ef4123
font-smoothing()
  vendor('font-smoothing', arguments)
uppercase()
  letter-spacing 1px
  font-weight bold
  text-transform uppercase
  font-smoothing antialiased

body
  font-family 'Helvetica', 'Arial', 'sans-serif'
  font-size 14px
  color #555
  
  a
    color inherit
    text-decoration none

header
  clearfix()
  padding 10px
  width 100%
  height 56px
  box-sizing border-box
  #logo, nav
    float left

  #logo
    background url('/images/logo.png') no-repeat left center
    color red
    width 40px
    height 40px
    float left
    uppercase()
  
  nav
    padding 10px
    a
      margin 0 10px
      font-size 14px
      uppercase()
      letter-spacing 0px
      cursor pointer
      transition color 0.3s  
      &:hover, &.highlighted
        color red
        padding-bottom 3px
      &:hover  
        border-bottom 2px solid
      &:first-child
        padding-left 0

#modal
  background rgba(0,0,0,0.8)
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  z-index 5
  padding 20px 50px 50px 50px
  box-sizing border-box
  display none
  cursor pointer
  .image_container
    text-align center
    max-width 100%
    box-sizing border-box
  .image
    max-width 100%
    height 100%
    display inline-block
    z-index 3
    box-sizing border-box
    position relative
    cursor default
    img
      max-width 100%
      max-height 100%
    .close
      background url('/images/close_dialog.png') no-repeat center center
      height 50px
      width 50px
      position absolute
      top -20px
      right -20px
      cursor pointer
      
#social
  padding 20px
  text-align center
  .preamble
    font-size 11px
    letter-spacing 1px
    padding 10px 0 20px 0
    text-transform uppercase
  a
    uppercase()
    letter-spacing 0
    color red
    text-decoration none
    margin 0 15px
    padding 10px 0 4px 30px
    &.facebook
      background url('/images/facebook.png') no-repeat left center
    &.twitter
      background url('/images/twitter.png') no-repeat left center
    &:hover
      border-bottom 2px solid

#images
  width 14400px
  margin-bottom 1px
  clearfix()
  img
    height 450px
    display block
    float left
    cursor -webkit-zoom-in
    cursor -moz-zoom-in

#portfolio
  width 100%
  overflow-x scroll
  box-sizing border-box
  #bg
    height 500px
    background url('/images/bg.jpg') no-repeat
    background-size auto 100%

::-webkit-scrollbar
::-moz-scrollbar
  width 4px

::-webkit-scrollbar-track
::-moz-scrollbar-track
  box-shadow inset 0 0 6px #aaa
  height 5px
  
::-webkit-scrollbar-thumb
::-moz-scrollbar-thumb
  background red
  border-radius 10px